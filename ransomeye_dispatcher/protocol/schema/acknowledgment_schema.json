{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AcknowledgmentEnvelope",
  "type": "object",
  "required": [
    "directive_id",
    "agent_id",
    "execution_result",
    "timestamp",
    "signature",
    "signature_hash"
  ],
  "properties": {
    "directive_id": {
      "type": "string",
      "format": "uuid"
    },
    "agent_id": {
      "type": "string"
    },
    "execution_result": {
      "type": "string",
      "enum": ["Success", "Failed", "Partial", "Skipped"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "signature": {
      "type": "string"
    },
    "signature_hash": {
      "type": "string"
    },
    "execution_details": {
      "type": "string"
    },
    "error_message": {
      "type": "string"
    }
  }
}

