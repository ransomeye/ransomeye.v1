{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye Policy Schema",
  "type": "object",
  "required": [
    "id",
    "version",
    "name",
    "enabled",
    "priority",
    "match_conditions",
    "decision",
    "signature",
    "signature_hash"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    },
    "priority": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1000
    },
    "match_conditions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["field", "operator", "value"],
        "properties": {
          "field": {
            "type": "string"
          },
          "operator": {
            "type": "string",
            "enum": ["equals", "contains", "matches", "in", "greater_than", "less_than"]
          },
          "value": {
            "oneOf": [
              {"type": "string"},
              {"type": "number"},
              {"type": "boolean"},
              {"type": "array"}
            ]
          }
        }
      }
    },
    "decision": {
      "type": "object",
      "required": ["action", "allowed_actions", "reasoning"],
      "properties": {
        "action": {
          "type": "string",
          "enum": ["allow", "deny", "quarantine", "isolate", "block", "monitor", "escalate", "require_approval"]
        },
        "allowed_actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "reasoning": {
          "type": "string"
        }
      }
    },
    "required_approvals": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "signature": {
      "type": "string",
      "minLength": 1
    },
    "signature_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  }
}

